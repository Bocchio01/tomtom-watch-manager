# ========================================================
#  Doxygen template for TomTom Watch Manager project
# ========================================================

PROJECT_NAME           = "TomTom Watch Manager"
# PROJECT_BRIEF          = "TomTom Watch Manager Suite"
PROJECT_LOGO           = "@CMAKE_SOURCE_DIR@/docs/logo55x55.jpg"
PROJECT_NUMBER         = "@PROJECT_VERSION@"
OUTPUT_DIRECTORY       = "@CMAKE_SOURCE_DIR@/docs"
GENERATE_LATEX         = NO
GENERATE_HTML          = YES
HTML_OUTPUT            = html
QUIET                  = YES

# Collect all include and src folders from modules
INPUT                  = \
  @CMAKE_SOURCE_DIR@/core \
  @CMAKE_SOURCE_DIR@/ui/cli \
  @CMAKE_SOURCE_DIR@/README.md

FILE_PATTERNS          = *.h *.hpp *.cpp *.md
RECURSIVE              = YES

# Doxygen layout and style
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
GENERATE_TREEVIEW      = YES
FULL_PATH_NAMES        = NO

# Treat warnings properly
WARN_IF_UNDOCUMENTED   = YES
WARN_NO_PARAMDOC       = YES

# Use Doxygen Awesome theme
GENERATE_TREEVIEW      = YES # optional. Also works without treeview
DISABLE_INDEX = NO
FULL_SIDEBAR = NO
HTML_EXTRA_STYLESHEET  = @AWESOME_CSS_DIR@/doxygen-awesome.css
HTML_COLORSTYLE        = LIGHT # required with Doxygen >= 1.9.5

# README file as main page
USE_MDFILE_AS_MAINPAGE = @CMAKE_SOURCE_DIR@/README.md
IMAGE_PATH = @CMAKE_SOURCE_DIR@
HTML_EXTRA_FILES = @CMAKE_SOURCE_DIR@